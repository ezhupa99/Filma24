{
  "name": "Filma24",
  "description": "Ky eshte nje extention per te pare filmin direkt nga source.",
  "version": "1.0",
  "manifest_version": 3,
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "permissions": [
    "webRequest",
    "*://*.google.com/*",
    "*://*.abcd.com/*",
    "*://*.example.com/*",
    "http://*.xyz.com/*",
    "*://*.headers.com/*",
    "declarativeNetRequest"
  ]
}
